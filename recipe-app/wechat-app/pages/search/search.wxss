/* 搜索页面样式 */

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--bg-white);
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.clear-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.cancel-btn {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-left: 24rpx;
  padding: 10rpx;
}

/* 区块标题 */
.history-section, .hot-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.clear-text {
  font-size: 26rpx;
  color: var(--text-light);
}

/* 历史标签 */
.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background: var(--bg-white);
  color: var(--text-primary);
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

/* 热门标签 */
.hot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  display: flex;
  align-items: center;
  background: var(--bg-white);
  color: var(--text-primary);
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.hot-rank {
  width: 36rpx;
  height: 36rpx;
  background: var(--text-light);
  color: white;
  border-radius: 50%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

.hot-tag.top .hot-rank {
  background: #FF6B6B;
}

/* 搜索结果 */
.result-section {
  margin-top: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.result-header text {
  font-size: 28rpx;
  color: var(--text-primary);
}

.result-count {
  color: var(--text-light) !important;
}

/* 结果列表 */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  display: flex;
  background: var(--bg-white);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
}

.result-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.result-image.placeholder {
  background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
}

.result-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.result-title {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 16rpx;
}

.result-title .highlight {
  color: var(--primary-color);
}

.result-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.result-meta .cuisine-tag {
  background: var(--primary-light);
  color: var(--primary-dark);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.favorite-count {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 无结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.no-result image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.no-result text {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.no-result .tip {
  font-size: 26rpx;
  color: var(--text-light);
}
