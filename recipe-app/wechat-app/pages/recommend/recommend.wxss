/* 推荐页面样式 */

.date-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.date-today {
  font-size: 72rpx;
  font-weight: 800;
  color: var(--primary-light);
  line-height: 1;
  letter-spacing: 8rpx;
}

.date-full {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.recommend-header {
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 推荐卡片 */
.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.recommend-card {
  background: var(--bg-white);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx var(--shadow-color);
  position: relative;
}

.recommend-card.featured {
  border: 4rpx solid var(--primary-color);
}

/* 推荐标签 */
.recommend-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFD700, #FFA000);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 160, 0, 0.3);
}

.recommend-tag image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.recommend-tag.secondary {
  background: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(66, 165, 245, 0.3);
}

/* 卡片图片 */
.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-image.placeholder {
  background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
}

.cuisine-tag {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  color: var(--text-primary);
  padding: 12rpx 24rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 卡片内容 */
.card-content {
  padding: 30rpx;
}

.card-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.ingredients-preview {
  background: var(--bg-primary);
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.preview-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  display: block;
}

.preview-list {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

/* 元信息 */
.card-meta {
  display: flex;
  gap: 30rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.meta-item image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  opacity: 0.6;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn.favorite {
  background: var(--primary-light);
  color: var(--primary-dark);
}

.action-btn.favorite.active {
  background: #FFEBEE;
  color: #E53935;
}

.action-btn.favorite image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.action-btn.view {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
}

.action-btn.view image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

/* 刷新区域 */
.refresh-section {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.refresh-section .btn {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
}

.refresh-section image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
