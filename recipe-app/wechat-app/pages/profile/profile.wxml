<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"/>
      <view class="user-text">
        <text class="nickname">{{userInfo.nickname || '美食家'}}</text>
        <text class="user-id">ID: {{userInfo.id}}</text>
      </view>
    </view>
    <view class="edit-btn" bindtap="editProfile">
      <image src="/images/edit.png" mode="aspectFit"/>
    </view>
  </view>

  <!-- 统计卡片 -->
  <view class="stats-card">
    <view class="stat-item">
      <text class="stat-number">{{stats.favorites}}</text>
      <text class="stat-label">我的菜谱</text>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item">
      <text class="stat-number">{{stats.cuisines}}</text>
      <text class="stat-label">偏好菜系</text>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item">
      <text class="stat-number">{{stats.newRecipes}}</text>
      <text class="stat-label">新菜谱</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-title">我的偏好</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="goToPreferences">
        <view class="menu-icon cuisine">
          <image src="/images/cuisine.png" mode="aspectFit"/>
        </view>
        <text class="menu-text">偏好菜系设置</text>
        <view class="menu-arrow">
          <text class="menu-value">{{preferredCuisinesText}}</text>
          <image src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </view>
    </view>
  </view>

  <view class="menu-section">
    <view class="menu-title">收藏管理</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="viewAllFavorites">
        <view class="menu-icon favorite">
          <image src="/images/heart-filled.png" mode="aspectFit"/>
        </view>
        <text class="menu-text">全部收藏</text>
        <view class="menu-arrow">
          <text class="menu-value">{{stats.favorites}}道</text>
          <image src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </view>
      <view class="menu-item" bindtap="viewByCuisine">
        <view class="menu-icon category">
          <image src="/images/category.png" mode="aspectFit"/>
        </view>
        <text class="menu-text">按菜系查看</text>
        <view class="menu-arrow">
          <image src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </view>
    </view>
  </view>

  <view class="menu-section">
    <view class="menu-title">其他</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="aboutUs">
        <view class="menu-icon about">
          <image src="/images/about.png" mode="aspectFit"/>
        </view>
        <text class="menu-text">关于我们</text>
        <view class="menu-arrow">
          <image src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </view>
      <view class="menu-item" bindtap="feedback">
        <view class="menu-icon feedback">
          <image src="/images/feedback.png" mode="aspectFit"/>
        </view>
        <text class="menu-text">意见反馈</text>
        <view class="menu-arrow">
          <image src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </view>
      <button class="menu-item share-btn" open-type="share">
        <view class="menu-icon share">
          <image src="/images/share-blue.png" mode="aspectFit"/>
        </view>
        <text class="menu-text">分享给好友</text>
        <view class="menu-arrow">
          <image src="/images/arrow-right.png" mode="aspectFit"/>
        </view>
      </button>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text>美味食谱 v1.0.0</text>
  </view>
</view>
