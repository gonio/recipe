/* 全局样式 - 淡蓝色系清新风格 */
page {
  --primary-color: #42A5F5;
  --primary-light: #E3F2FD;
  --primary-dark: #1976D2;
  --secondary-color: #64B5F6;
  --accent-color: #29B6F6;
  --text-primary: #263238;
  --text-secondary: #607D8B;
  --text-light: #90A4AE;
  --bg-primary: #F5F9FF;
  --bg-white: #FFFFFF;
  --border-color: #ECEFF1;
  --shadow-color: rgba(66, 165, 245, 0.1);
  
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: var(--bg-white);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
}

/* 标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 36rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(66, 165, 245, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(66, 165, 245, 0.2);
}

.btn-secondary {
  background: var(--primary-light);
  color: var(--primary-dark);
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: var(--primary-light);
  color: var(--primary-dark);
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-active {
  background: var(--primary-color);
  color: white;
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

/* 图片样式 */
.image-round {
  border-radius: 16rpx;
}

/* 文字样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

.text-primary-color {
  color: var(--primary-color);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: var(--text-light);
  font-size: 28rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(66, 165, 245, 0.4);
  z-index: 100;
}

.fab image {
  width: 48rpx;
  height: 48rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background: var(--bg-white);
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
}

.search-bar input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* 网格布局 */
.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 边距 */
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-20 { margin-right: 20rpx; }

/* 分隔线 */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 20rpx 0;
}
