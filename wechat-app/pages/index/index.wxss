/* 首页样式 */

/* 欢迎区 */
.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.username {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.new-badge {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 搜索栏 */
.search-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
}

.search-placeholder {
  color: var(--text-light);
  margin-left: 16rpx;
}

/* 菜系筛选 */
.cuisine-filter {
  margin-bottom: 30rpx;
}

.cuisine-scroll {
  white-space: nowrap;
}

.cuisine-list {
  display: flex;
  padding: 10rpx 0;
}

.cuisine-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  background: var(--bg-white);
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  transition: all 0.3s ease;
}

.cuisine-item.active {
  background: var(--primary-color);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(66, 165, 245, 0.3);
}

/* 菜谱卡片 */
.recipe-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recipe-card {
  display: flex;
  background: var(--bg-white);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
  position: relative;
}

.recipe-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.recipe-image.no-image {
  background: var(--primary-light);
  display: flex;
  align-items: center;
  justify-content: center;
}

.recipe-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cuisine-tag {
  background: var(--primary-light);
  color: var(--primary-dark);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.cook-time {
  color: var(--text-light);
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.cook-time::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  background: url('/images/time.png') no-repeat center;
  background-size: contain;
  margin-right: 6rpx;
}

.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.favorite-btn image {
  width: 32rpx;
  height: 32rpx;
}

.favorite-btn.active image {
  filter: hue-rotate(320deg) saturate(200%);
}

/* 加载状态 */
.loading-more, .no-more {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
  font-size: 26rpx;
}
